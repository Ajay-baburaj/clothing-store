<section id="main">
<div class="container">
    <div class="row mt-4">
        <div class="col-md-6">
            <h2 class="text-center">Edit Products</h2>
            <form action="/admin/edit/product/" enctype="multipart/form-data" method="post">
                
                <input type="text" value="{{productDetails._id}}" name="productId" hidden>
                <label for="">name</label>
                <input  class="form-control" type="text" value="{{productDetails.name}}" name="name">

                <label for="">Category</label>
                <input class="form-control" type="text" value="{{productDetails.categoryName.category}}" readonly>
                <input class="form-control" type="text" value="{{productDetails.categoryName._id}}" name="category" hidden>

                <label for="">sub categery</label>
                <input class="form-control" type="text" value="{{productDetails.subCategory}}" name="subCategory">

                <label for="">Price</label>
                <input name="price" class="form-control" type="text" value="{{productDetails.price}}">
                
                <label for="">Quantiy</label>
                <input name="quantity" class="form-control" type="text" value="{{productDetails.quantity}}">


                <label for="">Description</label>
                <input class="form-control" type="text" value="{{productDetails.description}}" name="description" class="mb-2">

                <label for="">Image</label>
                <div class="mb-2 mt-2">
                    <img src="/images/product/{{productDetails.img.[0]}}" style="height: 100px;width:100px;" alt="" id="imageView">
                    <img src="/images/product/{{productDetails.img.[1]}}" style="height: 100px;width:100px;" alt="" id="imageView1">
                    <img src="/images/product/{{productDetails.img.[2]}}" style="height: 100px;width:100px;" alt="" id="imageView2">
                    <img src="/images/product/{{productDetails.img.[3]}}" style="height: 100px;width:100px;" alt="" id="imageView3">
                </div>
                <input class="form-control" type="file" name="image" onchange="viewImage(event)" multiple accept="image/jpeg, image/jpg, image/png, image/webp" required>

                <button type="submit" class="btn btn-primary mt-4">Update</button>
            </form>
        </div>
    </div>
</div>

</section>



<script>
   
    function viewImage(event){
        document.getElementById('imageView').src = URL.createObjectURL(event.target.files[0])
        document.getElementById('imageView1').src = URL.createObjectURL(event.target.files[1])
        document.getElementById('imageView2').src = URL.createObjectURL(event.target.files[2])
        document.getElementById('imageView3').src = URL.createObjectURL(event.target.files[3])
    }

</script>