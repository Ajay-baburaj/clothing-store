</div>  

<script>
    function approveReturn(orderid,total,userId){
        $.ajax({
            url:'/admin/approve/return/?orderId='+orderid+'&total='+total+'&userId='+userId,
            method:'post',
            success:(response)=>{
                console.log(response)
                if(response.approvedStatus){
                    window.location.reload()
                }
            }
        })
    }
</script>