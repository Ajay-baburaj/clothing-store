<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" type="text/css"
    href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8"
    src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


<main class="main" id="main">
    <section style="background-color:rgba(244, 238, 238, 0.904)">
        <div class="container mt-5 p-5">
            <div class="">
                <div class="row m-4 d-flex justify-content-end">
                    {{!-- <a href="/admin/add-banner" style="width:auto" class="btn btn-success">Add Banner</a> --}}

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" style="width: auto;" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Add Banner
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">

                                    <form class="mx-1 mx-md-4" action="/admin/add-banner" enctype="multipart/form-data"
                                        method="post">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="name">Banner Name</label>
                                                <input type="text" id="name" onkeyup="validateemail()" name="name"
                                                    class="form-control" />
                                                <span class="text-danger" id="ErrorEmail"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="id_image">Banner Image</label>
                                                <input type="file" class="form-control" id="id_image" name="image"
                                                    data-bs-toggle="modal" data-bs-target="#exampleModal"
                                                    accept="image/*">
                                                <span class="text-danger" id="ErrorEmail"></span>
                                            </div>
                                        </div>



                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <p class="text-danger"></p>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-lg">Add Banner</button>
                                        </div>

                                    </form>

                                </div>
                                {{!-- <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div> --}}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <table class="table" id="myTable">
                        <thead>
                            <tr class="text-center bg-white border">

                                <th scope="col">Category Name</th>

                                <th scope="col">Category Image</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white">
                            {{#each response}}
                            <tr class="text-center">

                                <td>{{this.name}}</td>

                                <td><img src="/images/product/{{this.img}}" style="width:50px ;height: 50px" alt="">
                                </td>

                                <td><a href="/admin/edit-banner/{{this._id}}"><button
                                            class="btn btn-danger">Edit</button></a><a
                                        href="/admin/delete-banner/{{this._id}}"><button
                                            class="btn btn-success">Delete</button></a></td>

                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
    </section>
</main>


<script>

    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>
