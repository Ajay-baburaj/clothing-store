<section class="section" id="main">
   <div class="container-fluid pt-4 px-4">

        <div class="row g-4">

          <div class="col-sm-12 col-xl-12">
            <div class="rounded vh-100 p-4">
              <div class="d-flex justify-content-between">
                <h6 class="mb-4">Coupon Table</h6>
                <a data-bs-toggle="modal" data-bs-target="#modalAddCoupon"
                  class="btn btn-sm btn-outline-success m-2">Add Coupon</a>
              </div>
              {{!-- =================== Add COUPON Modal start ========================= --}}
              <div class="modal fade" id="modalAddCoupon" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
                tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title text text-danger" id="exampleModalToggleLabel">Add Coupon</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body  border-0">
                      <form action="/admin/add/coupon" method="post">


                        <input type="text" class="form-control  mb-3" placeholder="Name"
                          name="Name"  required>
                        <input type="text" class="form-control  mb-3" placeholder="Code"
                          name="Code" required>
                        <input type="number" class="form-control mb-3" placeholder="Percentage"
                          name="Percentage" required>
                        <input type="text" class="form-control  mb-3" placeholder="Description"
                          name="Description" required>
                        <input type="date" class="form-control  mb-3" placeholder="Date"
                          name="Date" required>


                    </div>
                    <div class="modal-footer  border-0">
                      <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
              {{!-- =================== Add COUPON Modal end ========================= --}}



              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Code</th>
                    <th scope="col">%</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>

                    <th></th>

                  </tr>
                </thead>
                <tbody>
                  {{#each coupons}}
                  <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Code}}</td>
                    <td>{{this.Percentage}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Date}}</td>

                    <td class="">

                      <ul style="list-style-type: none;" class="row align-items-start ">

                        <div class="col">
                          <li><a data-bs-toggle="modal" data-bs-target="#modalEditCoupon{{this._id}}"
                              class=" btn btn-sm btn-outline-warning col btn m-2">Edit</a></li>
                        </div>

                        <div class="col">
                          <li><a data-bs-toggle="modal" data-bs-target="#modalDeleteCoupon{{this._id}}"
                              class=" btn btn-sm btn-outline-danger col btn m-2">Delete</a></li>
                        </div>

                      </ul>

                    </td>
                  </tr>

                  {{!-- =================== EDIT COUPON Modal start ========================= --}}
                  <div class="modal fade" id="modalEditCoupon{{this._id}}" aria-hidden="true"
                    aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content ">
                        <div class="modal-header border-0">
                          <h5 class="modal-title text text-danger" id="exampleModalToggleLabel">Edit Product</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body  border-0">
                          <form id="editFormData{{this._id}}" >
                            <input type="text" class="form-control mb-2" placeholder="Model Name"
                              name="Name" value="{{this.Name}}" required>

                            <input type="text" value="{{this.Code}}" class="form-control mb-2"
                              placeholder="Code" name="Code" required>
                            <input type="number" value="{{this.Percentage}}" class="form-control mb-2"
                              placeholder="Percentage" name="Percentage" required>

                            <input type="text" name="couponId" hidden value="{{this._id}}">

                            <input type="text" value="{{this.Description}}" class="form-control mb-2"
                              placeholder="Description" name="Description" required>

                              <input type="date" class="form-control  mb-3" placeholder="Date" value="{{this.Date}}"
                                name="Date" required>
                            
                            
                        </div>
                        <div class="modal-footer  border-0">
                          <button onclick="editCoupon('{{this._id}}')" class="btn btn-success">Edit</button>
                        </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  {{!-- =================== EDIT COUPON Modal end ========================= --}}

                  {{!-- =================== Delete COUPON modal start ========================= --}}
                  <div class="modal fade" id="modalDeleteCoupon{{this._id}}" aria-hidden="true"
                    aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header border-0">
                          <h5 class="modal-title text text-danger" id="exampleModalToggleLabel">Delete User</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body  border-0">
                          <h3>Would you like to remove {{this.Code}}</h3>
                        </div>
                        <div class="modal-footer  border-0">
                          <button class=" btn btn-sm btn-danger  btn m-2" onclick="deleteCoupon('{{this._id}}')">Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  {{!-- =================== Delete COUPON modal end ========================= --}}

                  {{/each}}

                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
</section>

<script>
        function editCoupon(couponId){
            $('#editFormData'+couponId).submit((e)=>{
                e.preventDefault()
                $.ajax({
                  url:'/admin/edit/coupon',
                  type:'patch',
                  data: $('#editFormData'+couponId).serialize(),              
                  success:(response)=>{
                    if(response.status){
                      window.location.reload()
                    }
                  }
                })
            })
        }

        function deleteCoupon(couponid){
          let data ={
            couponId:couponid
          }
          $.ajax({
            url:'/admin/delete/coupon',
            method:'delete',
            data:data,  
            success:(response)=>{
              if(response.deleteStatus){
                window.location.reload()
              }
            }
          })
        }

</script>