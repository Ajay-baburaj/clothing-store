    <script>
        function removeFromWishlist(productId,userId){
            console.log('call is coming inside the function')
            let body ={
                userId: userId,
                productId:productId
            }
            $.ajax({
                url:'/remove/product/wishlist',
                type:'patch',
                data:body,
                success:(response)=>{
                    if(response.removeStatus){
                        window.location.reload()
                    }
                    
                }

            })
        }
    </script>