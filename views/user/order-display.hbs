<script>
  $('#returnRequest').submit((e) => {
    e.preventDefault()

    $.ajax({
      url: '/return/approval',
      method: 'post',
      data: $('#returnRequest').serialize(),
      success: (response) => {
        if (response.returnApproval) {
          window.location.reload()
        }
      }
    })
  })

</script>