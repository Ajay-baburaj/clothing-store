    <script>

        function addToWishlist(productId){
            $.ajax({
                url:'/addto/wishlist/'+productId,
                type:'get',
                success:(response)=>{
                    console.log(response)
                    if(response.signUp){
                        window.location.href='/sign-in'
                    }
                    if(response.addStatus){
                        
                        document.getElementById('heartIcon'+productId).style.color='rgb(0, 115, 255)'
                    }
                   
                }

            })
        }
    </script>

