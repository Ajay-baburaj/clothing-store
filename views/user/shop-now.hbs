    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form action="#">
                                <input type="text" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                    {{#each categoryDetails}}
                                                        <li><a href="/category-wise-shop-now/{{this._id}}">{{this.category}}</a></li>
                                                    {{/each}}

                            
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                 <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseTwo">MEN</a>
                                    </div>
                                    <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__brand">
                                                <ul>
                                                    {{#each categoryDetails.[0].subcategory}}
                                                    <li><a href="/subcatwise/?subcat={{this}}&catId={{../categoryDetails.[0]._id}}">{{this}}</a></li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              <div class="card"> 
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">WOMEN</a>
                                    </div>
                                    <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__price">
                                                <ul>
                                                    {{#each categoryDetails.[1].subcategory}}
                                                    <li><a href="/subcatwise/?subcat={{this}}&catId={{../categoryDetails.[1]._id}}">{{this}}</a></li>
                                                    {{/each}}
                                                    
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                   


{{!-- --------------------------------------------products starting---------------------------------------------- --}}
                    <div class="row">
                        {{#each productDetails}}
                        <div class="col-lg-4 col-md-6 col-sm-6  ">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="">
                                    <a href="/product-details/{{this._id}}" ><img src="/images/product/{{this.img.[0]}}"+ alt="" style="height: 20rem; width:20rem"></a>
                                    {{#if this.comparedDiscount}}
                                    <span class="label">{{this.comparedDiscount}}%</span>
                                    {{/if}}
                                    <ul class="product__hover">

                                        {{#wishlistHeartIcon this._id ../wishlistProducts}}
											<button id="wishlistButton{{this._id}}" class="wishlistButton border border-0" onclick="addToWishlist('{{../this._id}}')"><i class="fa fa-heart heartIcon"  id="heartIcon{{../this._id}}" style="color:red;" aria-hidden="true"></i></button>

											

											{{else}}

											<button id="wishlistButton{{../this._id}}" class="wishlistButton border border-0"  onclick="addToWishlist('{{../this._id}}')"><i class="fa fa-heart heartIcon" style="color:grey!important; "  id="heartIcon{{../this._id}}"  aria-hidden="true"></i></button>


											
											{{/wishlistHeartIcon}}


                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6 class="text-center" style="margin-top: 5rem;">{{this.name}}</h6>
                                    {{#if this.quantity}}
                                    <button class="add-cart border-0 btn btn-transparent fw-bold" style="margin-left: 5.5rem;color:brown;" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                                    {{else}}
                                    <p class="text-danger text-center">Out of stock!!</p>
                                    {{/if}}
                                   {{#if this.comparedDiscount}}
                                    <div class="d-flex justify-content-around">
                                        <span class="text-muted text-decoration-line-through">{{this.price}}</span>
                                    <strong><span class="text-center">₹ {{this.discountedPrice}}</span></strong>
                                    <span class="text-success"> {{this.comparedDiscount}}%</span>
                                    </div>
                                    {{else}}
                                    <div class="text-center">
                                        <strong><span class="">₹ {{this.price}}</span></strong>
                                     </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

{{!-- ----------------------------------------------------------------------------------------------------}}

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__pagination">
                                {{#each pages}}
                                <a class="active" href="/shop/now/?page={{this}}">{{this}}</a>
                               {{/each}}
                                <span>...</span> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
